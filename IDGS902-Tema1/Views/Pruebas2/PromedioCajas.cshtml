
@{
    ViewBag.Title = "PromedioCajas";

}

<h2>PromedioCajas</h2>
<div class="container-fluid">
    <form action="/" method="post">
        <div class="row">


            <div class="col-6">
                <label for="txtNumeroCajas">Numero de cajas</label>
                <input type="number" class="form-control" id="txtNumeroCajas" name="txtNumeroCajas" value="@ViewBag.NumeroCajas" />
            </div>
            <div class="col-6">
                <input type="submit" class="btn btn-outline-success" value="Crear" />
            </div>

        </div>


        @if (ViewBag.NumeroCajas > 0)
        {
            <div class="row">
                <div class="col-6 my-2">
                    <h4>Inputs:</h4>
                    @for (int i = 1; i <= ViewBag.NumeroCajas; i++)
                    {
                        <input type="number" class="form-control" name="caja[@i]" />
                    }

                    <div class="col-6 my-3">
                        <input type="submit" class="btn btn-outline-primary" value="Calcular" name="Calcular" id="Calcular" /><br />
                    </div>
                </div>

                <div class="col-6" my-2>
                    <span>Suma de Valores: <b> @ViewBag.Promedio</b> </span><br />
                    <span>
                        Numeros que se Repiten:
                    </span>
                    @if (ViewBag.MasRepetidos != null)
                    {


                        foreach (var numero in ViewBag.MasRepetidos)

                        {
                            <ul>
                                <li><b> @numero</b> </li>
                            </ul>}

                    }
                </div>

                </div>
        }

    </form>
</div>


